@{
    ViewData["Title"] = "CreateOrEditExpense";
}

@model SpendSmart.Models.Expense

<div class="container">
    <h1 class="text-center">Create or Edit an expense</h1>

    <form asp-action="CreateOrEditExpenseForm" asp-controller="Home">
        <label class="mt-4" for="Id">Id</label>
        <input class="form-control" type="number" placeholder="0" asp-for="Id"/>

        <label class="mt-4" for="Value">Value</label>
        <input class="form-control" type="number" step=".01" placeholder="0" asp-for="Value" />

        <label class="mt-4" for="Description">Description</label>
        <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </form>

</div>